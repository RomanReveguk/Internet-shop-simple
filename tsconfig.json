{
  "compilerOptions": {
    "target": "ES6",                              // Компилируем в ES6
    "module": "CommonJS",                         // Используем CommonJS модули (для Node.js)
    "moduleResolution": "node",                   // Используем разрешение модулей как в Node.js
    "strict": true,                               // Включаем строгий режим (включает типовую проверку и другие строгие проверки)
    "esModuleInterop": true,                      // Поддержка импорта CommonJS модулей через ES6 импорты
    "skipLibCheck": true,                         // Пропускаем проверку типов в библиотеках (ускоряет компиляцию)
    "forceConsistentCasingInFileNames": true,     // Обеспечиваем согласованность регистров имен файлов
    "resolveJsonModule": true,                    // Разрешаем импорт JSON файлов
    "outDir": "./dist",                           // Компилированный код будет сохранен в директорию dist
    "rootDir": "./src",                           // Исходный код находится в папке src
    "noEmit": false                               // Генерируем JavaScript файлы при компиляции (по умолчанию false)
  },
  "include": [
    "src/**/*.ts"                                 // Все TypeScript файлы в папке src
  ]
}